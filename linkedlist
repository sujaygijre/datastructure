#include<stdio.h>
#include<stdlib.h>
#include<malloc.h>
struct node  //definition of a node in a linked list
{
	int data;
	struct node *next;
};
void display(struct node *);//to display linked list
void addbeg(struct node *);//to add element in the beginning of the linked list

int main()
{
	struct node *start,*tail,*temp;
	start=NULL;
int n,num;
printf("\n enter the number of elements");
scanf("%d",&num);
	for(int i=0;i<num;i++)
	{
		printf("\n enter the value of %d element",i);
		scanf("%d",&n);
		if(start==NULL)     //if the linked list is empty 
		{
			temp=(struct node *)malloc(sizeof(struct node));
			temp->data=n;
			temp->next=NULL;
			start=temp;
		}
		else              //if the linked list already contains some elements
		{
			temp=start;
			while(temp->next!=NULL)
			temp=temp->next;
			tail=(struct node *)malloc(sizeof(struct node));
			tail->data=n;
			tail->next=NULL;
			temp->next=tail;
		}
	}
display(start);
addbeg(start);
}


void addbeg(struct node *start)
{
			struct node *beg;
			int newno;
			printf("\n enter new number");
			scanf("%d",newno);
			beg=(struct node*)malloc(sizeof(struct node));
			beg->data=newno;
			beg->next=start;
			start=beg;
			printf("\n the new linked list");
			
			display(start);
}


void display(struct node *start)
{
struct node *display;
display=start;
while(display->next!=NULL)
{
	printf("%d ",display->data);
	display=display->next;
}
printf("%d ",display->data);

}
